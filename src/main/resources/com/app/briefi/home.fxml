<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.briefi.controllers.HomeController">
   <children>
      <VBox prefHeight="600.0" spacing="5.0" style="-fx-background-color: #3185FC;">
         <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="TABLEAU DE BORD">
                    <font>
                        <Font name="System Bold" size="17.0" />
                    </font>
                </Text>
            <VBox VBox.vgrow="ALWAYS">
               <children>
                  <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onBackToHome" prefHeight="34.0" prefWidth="131.0" style="-fx-background-color: #3185FC;" text="Home" textFill="WHITE">
                     <graphic>
                            <ImageView fitHeight="100.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../../../assets/image/home.png" />
                                </image>
                            </ImageView>
                     </graphic>
                  </Button>
                  <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onReadProducts" prefHeight="34.0" prefWidth="202.0" style="-fx-background-color: #3185FC;" text="Listes des produits" textFill="WHITE">
                     <graphic>
                        <ImageView fitHeight="100.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../assets/image/products.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onReadCategories" prefHeight="34.0" prefWidth="202.0" style="-fx-background-color: #3185FC;" text="Liste des catégories" textFill="WHITE">
                     <graphic>
                        <ImageView fitHeight="100.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../assets/image/categories.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button alignment="TOP_LEFT" mnemonicParsing="false" prefHeight="34.0" prefWidth="204.0" style="-fx-background-color: #3185FC;" text="Listes des ventes " textFill="WHITE">
                     <graphic>
                        <ImageView fitHeight="100.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../assets/image/cart.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button alignment="TOP_LEFT" mnemonicParsing="false" prefHeight="34.0" prefWidth="204.0" style="-fx-background-color: #3185FC;" text="Statistique de vente" textFill="WHITE">
                     <graphic>
                        <ImageView fitHeight="100.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../assets/image/stats.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button alignment="TOP_LEFT" mnemonicParsing="false" prefHeight="34.0" prefWidth="222.0" style="-fx-background-color: #3185FC;" text="Paramètres" textFill="WHITE">
                     <graphic>
                        <ImageView fitHeight="100.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../assets/image/settings.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button alignment="TOP_LEFT" mnemonicParsing="false" prefHeight="34.0" prefWidth="221.0" style="-fx-background-color: #3185FC;" text="Gestion de compte utilisateur" textFill="WHITE">
                     <graphic>
                        <ImageView fitHeight="100.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../assets/image/users.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </VBox>
            <Button mnemonicParsing="false" style="-fx-background-color: #3185FC;" text="Obtenir de l'aide" textFill="WHITE">
               <graphic>
                      <ImageView fitHeight="100.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                          <image>
                              <Image url="@../../../assets/image/help.png" />
                          </image>
                      </ImageView>
               </graphic>
            </Button>
         </children>
      </VBox>
      <StackPane fx:id="contentAreatStackPane" />
   </children>
</HBox>
